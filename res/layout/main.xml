<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/four_by_one_widget_frame_portrait"
	android:orientation="horizontal" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:paddingTop="10dip"
	android:paddingBottom="10dip"
	android:paddingLeft="12dip"
	android:paddingRight="12dip"
	android:gravity="center_vertical|center_horizontal"	>
	<ImageView android:id="@+id/power_button" 
		android:src="@drawable/power_button_selector"
		android:hapticFeedbackEnabled="true" 
		android:layout_height="fill_parent" 
		android:layout_width="fill_parent" 
		android:layout_weight="2"
		android:scaleType="fitCenter"/>
		
	<ImageView android:id="@+id/sound_button"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:src="@drawable/sound_button_selector"
		android:hapticFeedbackEnabled="true"
		android:layout_weight="2"
		android:scaleType="fitCenter"  />

	<ImageView android:id="@+id/zone_button"
		android:layout_width="fill_parent"
		 android:layout_height="fill_parent"
		android:src="@drawable/zone_button_selector"
		android:hapticFeedbackEnabled="true"
		android:layout_weight="2"
		android:scaleType="fitCenter"  />
		
	<ImageView android:id="@+id/input_selection_button"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:src="@drawable/input_button_selector"
		android:hapticFeedbackEnabled="true"
		android:layout_weight="2"
		android:scaleType="fitCenter" />
		
	<ImageView android:id="@+id/dsp_selection_button"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:src="@drawable/dsp_selection_button_selector"
		android:hapticFeedbackEnabled="true"
		android:layout_weight="2"
		android:scaleType="fitCenter" />

	<ImageView android:id="@+id/open_settings_button"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:src="@drawable/wrench_button_selector"
		android:hapticFeedbackEnabled="true"
		android:layout_weight="2" 
		android:scaleType="fitCenter" />
</LinearLayout>
